{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "curly": 2,
    "no-extra-boolean-cast": 0,
    "quotes": 0,
    "no-console": 2,
    "indent": ["error", 2],
    "no-debugger": 2,
    "no-var": 2,
    "no-irregular-whitespace": 2,
    "semi": 0,
    "no-trailing-spaces": 2,
    "eol-last": 0,
    "eqeqeq": 2,
    "no-eval": 2,
    "no-underscore-dangle": 0,
    "no-alert": 2,
    "no-lone-blocks": 0,
    "no-implicit-globals": 2,
    "jsx-quotes": 2,
    "block-spacing": 2,
    "comma-spacing": 2,
    "comma-dangle": 0,
    "semi-spacing": 2,
    "prefer-const": 2,
    "prefer-destructuring": 2,
    "prefer-numeric-literals": 2,
    "prefer-rest-params": 2,
    "prefer-spread": 2,
    "prefer-template": 2,
    "prefer-arrow-callback": 2,
    "prefer-stateless-function": 0,
    "require-render-return": 0,
    "sort-prop-types": 0
  },
  "globals": {
    "require": true,
    "SERVER_CONFIG": true
  }
}
